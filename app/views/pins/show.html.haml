#pin_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.pin_image
        = image_tag @pin.image.url(:medium)
      .panel-body
        %h1= @pin.title
        %p.description= @pin.description
        %p
        Submitted by
        = @pin.user.email
        .row
          .col-md-6

          .col-md-6
            = render 'show_buttons'
      .panel-footer
        %h3 Comments
        = render @pin.comments
        %h3.reply-to-pin Reply to Pin
        - if user_signed_in?
          = render 'comments/form'
        - else
          = link_to "Log In", new_user_session_path
          to add a comment

